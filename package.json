    "scripts": {
        "test": "(export PGDATABASE=prefs_testdb PGPORT=5433; npm run startTestServer && node node_modules/nyc/bin/nyc.js node tests/all-tests.js && npm run dropTestDatabase)",
        "testNoDrop": "(export PGDATABASE=prefs_testdb PGPORT=5433; npm run startTestServer && node node_modules/nyc/bin/nyc.js node tests/all-tests.js)",
        "startTestServer": "./src/database/scripts/startDockerPostgres.sh",
        "dropTestDatabase": "./src/database/scripts/dropDockerTestDatabase.sh",
